mixin aside(flag)
  if(flag == "hasBuyBtn")
    .aside
      i.icon-burger.js-menu-trig
      ul.aside__list
        li: a(href="p28.html" data-index="28") 28
        li: a(href="p32.html" data-index="32") 32
        li: a(href="p32s.html" data-index="32") 32S

      ul.aside__list
        li: a(href="p38.html" data-index="38") 38
        li: a(href="p45.html" data-index="45") 45
      ul.aside__list
        li: a(href="p66.html" data-index="66") 66,6
      ul.aside__list
        li.aside__list-wt: a(href="wt.html" data-index="wt") WT
        li: a(href="wts.html" data-index="wt") WTS
      ul.aside__list.aside__list_buy.js-aside-buy
        li: a(href="#") BUY
  else
    .aside
      i.icon-burger.js-menu-trig
      ul.aside__list
        li: a(href="p28.html" data-index="28") 28
        li: a(href="p32.html" data-index="32") 32
        li: a(href="p32s.html" data-index="32") 32S
      ul.aside__list
        li: a(href="p38.html" data-index="38") 38
        li: a(href="p45.html" data-index="45") 45
      ul.aside__list
        li: a(href="p66.html" data-index="66") 66,6
      ul.aside__list
        li.aside__list-wt: a(href="wt.html" data-index="wt") WT
        li: a(href="wts.html" data-index="wt") WTS

